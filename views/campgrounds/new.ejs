<% layout('layouts/boilerplate.ejs') %> 
<div class="row">
    <h1 class="text-center">Add a New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form class="mt-3 needs-validation" method="POST" action="/campgrounds" enctype="multipart/form-data" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Enter Name of Campground: </label>
            <input type="text" id="title" name="campground[title]" placeholder="Name" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter a name!
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Enter Location: </label>
            <input type="text" id="location" name="campground[location]" placeholder="Location" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter a location!
            </div>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Enter Nightly Price: </label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" step="0.1" id="price" name="campground[price]" placeholder="0.00" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter a price!
                </div>
            </div>
        </div>
        <div class=" mb-3">
            <label for="description" class="form-label">Enter description: </label>
            <textarea id="description" name="campground[description]" placeholder="Description" class="form-control" required></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter a description!
            </div>
        </div>
        <!-- <div class="mb-3"> -->
            <!-- <label for="image" class="form-label">Enter image URL: </label>
            <input type="text" id="image" name="campground[image]" placeholder="Image URL" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter an image URL!
            </div> -->
            <!-- <input type="file" name="image" id="image" multiple > -->
        <!-- </div> -->
        <div class="mb-3">
            <label for="image" class="form-label">Add image(s):</label>
            <input class="form-control" type="file" name="image" id="image" multiple required>
            <div class="invalid-feedback">
                This campground would look much better with a picture!
            </div>
        </div>
        <button class="btn btn-success">Add Campground</button>
        <a href="/campgrounds" class="btn btn-danger">Cancel</a>
        </form>

        
    </div>
</div>
